# Configuration du serveur
PORT=3000
NODE_ENV=development

# Chemins des modèles
WHISPER_MODEL_DIR=./models/whisper
WHISPER_MODEL_NAME=ggml-tiny-q5_1.bin

PIPER_MODEL_DIR=./models/piper
PIPER_DEFAULT_VOICE=fr_FR-female-medium

KALDI_MODEL_DIR=./models/kaldi

# Configuration LLM
LLM_MODEL_DIR=./models/llm
LLM_MODEL_NAME=mistral-7b-instruct-v0.2.Q4_K_M.gguf
LLM_MAX_TOKENS=2048
LLM_TEMPERATURE=0.7

# Limites
MAX_AUDIO_SIZE=10485760  # 10 MB
MAX_TEXT_LENGTH=1000
REQUEST_TIMEOUT=30000    # 30 secondes

# Sécurité
API_KEY=votre_api_key_secrete
CORS_ORIGIN=http://localhost:8080,https://votre-app.com

# Logging
LOG_LEVEL=info
