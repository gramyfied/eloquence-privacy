import 'package:flutter/material.dart';
import 'package:flutter_webrtc/flutter_webrtc.dart' as webrtc;
import 'package:flutter_riverpod/flutter_riverpod.dart';
import 'package:flutter_dotenv/flutter_dotenv.dart';
import 'core/config/app_config.dart';
import 'core/utils/logger_service.dart';
import 'presentation/app.dart';

/// Configuration audio Android pour LiveKit
/// R√©sout le probl√®me de silence IA apr√®s le premier enregistrement
Future<void> _initializeAndroidAudioSettings() async {
  try {
    logger.i('main', 'üéµ Configuration audio Android pour LiveKit...');
    
    // Configuration en mode MEDIA pour une meilleure gestion des lectures audio multiples
    // R√©sout le conflit entre enregistrement et lecture TTS
    await webrtc.WebRTC.initialize(options: {
      'androidAudioConfiguration': webrtc.AndroidAudioConfiguration.media.toMap()
    });
    
    // Application de la configuration
    webrtc.Helper.setAndroidAudioConfiguration(
        webrtc.AndroidAudioConfiguration.media);
    
    logger.i('main', '‚úÖ Configuration audio Android appliqu√©e (mode MEDIA)');
    logger.i('main', 'üîß Probl√®me de silence IA apr√®s premier enregistrement r√©solu');
  } catch (e) {
    logger.e('main', 'Erreur lors de la configuration audio Android', e);
  }
}

void main() async {
  WidgetsFlutterBinding.ensureInitialized();

  // CRITIQUE : Configuration audio Android AVANT toute autre initialisation
  // Ceci r√©sout le probl√®me o√π l'IA ne r√©pond plus apr√®s le premier enregistrement
  await _initializeAndroidAudioSettings();

  logger.i('main', 'üí° Chargement des variables d\'environnement...');
  
  try {
    // Charger le fichier .env
    await dotenv.load(fileName: ".env");
    logger.i('main', 'Variables d\'environnement charg√©es avec succ√®s. Contenu: ${dotenv.env}');
  } catch (e) {
    logger.w('main', 'Impossible de charger le fichier .env: $e');
    logger.i('main', 'Utilisation des valeurs par d√©faut');
  }

  // Initialiser la configuration de l'application
  await AppConfig.initialize();
  logger.i('main', 'Configuration de l\'application initialis√©e');

  logger.i('main', 'üöÄ Lancement de l\'application Eloquence 2.0 avec correction audio');

  runApp(const ProviderScope(child: EloquenceApp()));
}